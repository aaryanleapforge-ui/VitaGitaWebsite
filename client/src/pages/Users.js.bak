import React, { useState } from "react";
import useUsersData from "../hooks/useUsersData";
import useUserDetails from "../hooks/useUserDetails";

export default function Users() {
  // Load all users
  const { users, loading: usersLoading } = useUsersData();

  // Track which user is selected
  const [selectedUser, setSelectedUser] = useState(null);

  // Load selected user's details
  const {
    userDetails,
    loading: detailsLoading,
  } = useUserDetails(selectedUser);

  const viewUserDetails = (uid) => {
    setSelectedUser(uid); // only set state here
  };

  return (
    <div className="page users-page">
      <h1 className="page-title">Users</h1>

      {/* Users table */}
      <div className="table-container">
        {usersLoading ? (
          <p>Loading users...</p>
        ) : (
          <table className="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Joined</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {users.map((u, i) => (
                <tr key={u.uid || u.id || i}>
                  <td>{u.name || "—"}</td>
                  <td>{u.email}</td>
                  <td>
                    {u.createdAt?.toDate
                      ? u.createdAt.toDate().toLocaleDateString()
                      : u.createdAt || "—"}
                  </td>
                  <td>
                    <button
                      className="btn view-btn"
                      onClick={() => viewUserDetails(u.uid || u.id)}
                    >
                      View
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        )}
      </div>

      {/* Selected user details */}
      {selectedUser && (
        <div className="details-card">
          <h2>User Details</h2>

          {detailsLoading ? (
            <p>Loading details...</p>
          ) : userDetails ? (
            <div className="details">
              <p>
                <strong>Name:</strong> {userDetails.name || "—"}
              </p>
              <p>
                <strong>Email:</strong> {userDetails.email}
              </p>
              <p>
                <strong>Joined:</strong>{" "}
                {userDetails.createdAt?.toDate
                  ? userDetails.createdAt.toDate().toLocaleDateString()
                  : userDetails.createdAt || "—"}
              </p>
            </div>
          ) : (
            <p>No details found.</p>
          )}
        </div>
      )}
    </div>
  );
}
